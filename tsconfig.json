{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": [
      "nativewind/types",
      "node",
      "jest",
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]  
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}